<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patients</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link <%= activeTab === 'patients' ? 'active' : '' %>" href="/patients">Patients</a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= activeTab === 'form' ? 'active' : '' %>" href="/">Add Patient</a>
            </li>
        </ul>

        <h1>Patients List</h1>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Diabetes</th>
                    <th>Prevalent Stroke</th>
                    <th>Prevalent Hypertension</th>
                    <th>Ten Year CHD</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (patients.length > 0) { %>
                    <% patients.forEach((patient) => { %>
                        <tr>
                            <td><%= patient.name %></td>
                            <td><%= patient.age %></td>
                            <td><%= patient.diabetes %></td>
                            <td><%= patient.prevalentStroke %></td>
                            <td><%= patient.prevalentHyp %></td>
                            <td><%= patient.TenYearCHD %></td>
                            <td>
                                <form method="POST" action="/delete-patient/<%= patient.id %>">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7">No patients found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
